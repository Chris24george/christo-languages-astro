---
import Layout from '../layouts/Layout.astro';
// No Button component import needed
---

<Layout title="Thank You for Subscribing! | Christo Languages">
  <div class="container mx-auto px-4 py-16 text-center">
    <h1 class="text-3xl md:text-4xl font-serif font-bold text-foreground mb-4">
      Thank You for Subscribing!
    </h1>
    <p class="text-lg text-foreground/80 mb-8">
      You're all set. Check your inbox for the latest language learning tips and updates.
    </p>

    <a 
      href="/"
      class="inline-block px-6 py-3.5 rounded-lg font-medium cursor-pointer transition-all duration-300 ease-in-out bg-primary text-primary-foreground hover:bg-primary/90 hover:-translate-y-0.5 shadow-sm hover:shadow-md"
    >
      Back to Christo Languages
    </a>
  </div>
</Layout> 