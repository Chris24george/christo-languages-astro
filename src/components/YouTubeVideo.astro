---
interface Props {
  videoId: string;
  title?: string;
  className?: string;
}

const { videoId, title = "YouTube video", className = "" } = Astro.props;
---

<div class={`relative aspect-video w-full overflow-hidden rounded-lg ${className}`}>
  <iframe
    src={`https://www.youtube.com/embed/${videoId}`}
    title={title}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen
    class="absolute top-0 left-0 h-full w-full border-0"
  >
  </iframe>
</div> 