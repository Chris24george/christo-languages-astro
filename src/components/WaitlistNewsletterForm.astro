    .formkit-form .formkit-spinner {
        display: none; /* Hidden by default */
    }
    
    .formkit-form.formkit-submitting .formkit-submit span span:first-child { /* Target the spinner span */
         display: flex; /* Show spinner during submit */
    }
     .formkit-form.formkit-submitting .formkit-submit span span:not(:first-child) { /* Hide text span */
        /* Optionally hide text or keep it */
    }
    
    .formkit-spinner > div {
        width: 5px;
        height: 5px;
        margin: 0 1px;
        background-color: currentColor;
        border-radius: 50%;
        animation: formkit-bouncedelay 1s infinite ease-in-out both;
    }
    
    .formkit-spinner > div:nth-child(1) {
        animation-delay: -0.32s;
    }
    
    .formkit-spinner > div:nth-child(2) {
        animation-delay: -0.16s;
    }
    
    @keyframes formkit-bouncedelay {
        0%, 80%, 100% {
            transform: scale(0);
        }
        40% {
            transform: scale(1);
        }
    }
    
    /* Modal animation */
    #confirmation-modal-ck.flex {
        display: flex;
    }
    #confirmation-modal-ck.flex > div {
        opacity: 1;
        transform: scale(1);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Select elements specific to this component instance
        const componentRoot = document.querySelector('.convertkit-form-container'); 
        if (!componentRoot) return;

        const form = componentRoot.querySelector<HTMLFormElement>('.formkit-form');
        const modal = componentRoot.querySelector<HTMLElement>('#confirmation-modal-ck');
        const formWrapper = form ? form.parentNode : null; // Get parent safely
        const closeModalButtons = componentRoot.querySelectorAll('#close-modal-button-ck, #close-modal-button-ok-ck');

        // Ensure all essential elements exist before proceeding
        if (!form || !modal || !formWrapper || !(formWrapper instanceof Node)) {
            console.error('ConvertKit form or modal elements not found within this component.');
            return;
        }

        const modalContent = modal.firstElementChild;
        if (!modalContent) {
             console.error('Modal content area not found.');
             return;
        }

        // Function to open the modal
        const openModal = () => {
            modal.classList.remove('hidden');
            modal.classList.add('flex'); // Use flex for centering
            // Trigger animation
            requestAnimationFrame(() => {
                if (modalContent) {
                    modalContent.classList.add('opacity-100', 'scale-100');
                    modalContent.classList.remove('opacity-0', 'scale-95');
                }
            });
        };

        // Function to close the modal
        const closeModal = () => {
            if (modalContent) {
                modalContent.classList.remove('opacity-100', 'scale-100');
                modalContent.classList.add('opacity-0', 'scale-95');
            }
            setTimeout(() => {
                 modal.classList.add('hidden');
                 modal.classList.remove('flex');
                 // Reset form submitting state
                 form.classList.remove('formkit-submitting');
            }, 300); // Match modal animation duration
        };

        // Close modal listeners
        closeModalButtons.forEach(button => {
            button.addEventListener('click', closeModal);
        });
        // Close modal when clicking backdrop
        modal.addEventListener('click', (event) => {
            if (event.target === modal) {
                closeModal();
            }
        });

        // Add submitting class on submit start
        form.addEventListener('submit', () => {
            form.classList.add('formkit-submitting');
        });

        // Observe ConvertKit's changes to show the modal on success
        const observer = new MutationObserver((mutationsList) => {
            for (const mutation of mutationsList) {
                if (mutation.type === 'childList') {
                    // Check if ConvertKit added its success message
                    // Search within the form's wrapper, not the whole document
                    const successMessage = formWrapper.querySelector('.formkit-alert-success');
                    if (successMessage) {
                        console.log('ConvertKit success message detected.');
                        openModal();
                        observer.disconnect(); // Stop observing once success is shown
                        break; // Exit loop once handled
                    }
                }
            }
        });

        // Start observing the form's parent for added nodes (like the success message)
        observer.observe(formWrapper, { childList: true, subtree: true });
    });
</script>